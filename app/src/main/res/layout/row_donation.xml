<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/margin_view_typical">

    <TextView
        android:id="@+id/billing_donation_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="$9.99"/>

    <TextView
        android:id="@+id/billing_donation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_view_typical"
        android:layout_marginRight="@dimen/margin_view_typical"
        android:layout_toLeftOf="@id/billing_donation_price"
        android:layout_toStartOf="@id/billing_donation_price"
        tools:text="Donation Option"/>

</RelativeLayout>